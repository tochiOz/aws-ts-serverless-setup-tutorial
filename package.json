{
  "name": "aws-ts-serverless",
  "version": "1.0.0",
  "description": "AWS Serverless setup with Typescript Functions",
  "main": "index.js",
  "repository": "git@github.com:tochiOz/aws-ts-serverless-setup-tutorial.git",
  "author": "Tochukwu Ozurumba",
  "license": "MIT",
  "scripts": {
    "load:env": "set STAGE=dev && node load-env.js",
    "deploy": "export $(grep -v '^#' .env.$npm_config_stage | xargs -d '\n') && node scripts/deploy.js --application=$npm_config_application --stage=$npm_config_stage",
    "deploy:win": "cross-env STAGE=$npm_config_stage APPLICATION=$npm_config_application node scripts/deploy.js",
    "offline": "export $(grep -v '^#' .env.$npm_config_stage | xargs -d '\n') && cd apps/$npm_config_application && rm -rf .build && serverless offline",
    "test": "export $(grep -v '^#' .env.$npm_config_stage | xargs -d '\n') && mocha -r ts-node/register **/__tests__/**/* --timeout 30000",
    "local": "sls offline -s dev",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.137",
    "@types/commander": "^2.12.2",
    "@types/dotenv-safe": "^8.1.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/serverless": "^3.12.22",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "serverless": "^3.38.0",
    "serverless-dynamodb": "^0.2.51",
    "serverless-dynamodb-stream-arn-plugin": "^0.0.7",
    "serverless-offline": "^12.0.4",
    "serverless-plugin-typescript": "^2.1.4",
    "shelljs": "^0.8.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@automapper/classes": "^8.7.7",
    "@automapper/core": "^8.7.7",
    "@automapper/types": "^6.3.1",
    "@aws-sdk/client-dynamodb": "^3.556.0",
    "@aws-sdk/client-s3": "^3.556.0",
    "@aws-sdk/lib-dynamodb": "^3.556.0",
    "@types/lodash": "^4.14.192",
    "@types/uuid": "^9.0.1",
    "aws-lambda": "^1.0.7",
    "commander": "^12.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "dotenv-safe": "^9.1.0",
    "lambda-hooks": "^0.2.1",
    "lodash": "^4.17.21",
    "source-map-support": "^0.5.21",
    "uuid": "^9.0.0",
    "yup": "^1.4.0"
  }
}
